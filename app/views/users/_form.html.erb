<%= form_for @user, html: {multipart: true} do |f| %>

  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%=f.label :name %>
    <%=f.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%=f.label :email %>
    <%=f.text_field :email, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :avatar_image %>
    <p><%= image_tag(user_avatar_thumb(@user)) %></p>
    <%= f.file_field :avatar_image, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary'%> или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
