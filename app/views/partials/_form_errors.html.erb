<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger">
    <div class="lead buffer-bottom">
      <%= t('.form_errors', { count: errors.count}) %>
    </div>

    <ul>
      <% errors.full_messages.each do |messages| %>
        <li><%= messages %></li>
      <% end %>
    </ul>
  </div>
<% end %>
